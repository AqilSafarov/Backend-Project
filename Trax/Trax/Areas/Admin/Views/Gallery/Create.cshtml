@model Gallery
@{
    ViewData["Title"] = "Create";
}

<div class="intro-y flex items-center mt-8">
    <h2 class="text-lg font-medium mr-auto">
        Create Service
    </h2>
</div>
<div class="grid grid-cols-12 gap-6 mt-5">
    <div class="intro-y col-span-12 lg:col-span-6">
        <!-- BEGIN: Form Layout -->
        <form method="post" asp-area="admin" asp-controller="Gallery" asp-action="create" enctype="multipart/form-data">
            <div asp-validation-summary="All" style="color:red; margin-bottom:30px;"></div>
            <div class="intro-y box p-5">
                <div>
                    <label asp-for="ImageFile">Picture</label>
                    <input asp-for="ImageFile" class="input w-full border mt-2">
                </div>

                <div>
                    <label>Name</label>
                    <input asp-for="Name" class="input w-full border mt-2" placeholder="Input text">
                </div>
               
                <div class="mt-3">
                    <label asp-for="GalleryCategoryId">Category</label>
                    <div class="mt-2">
                        <select asp-for="GalleryCategoryId" asp-items="@(new SelectList(ViewBag.GalleryCategory, "Id", "Name"))" data-placeholder="Select your favorite actors" class="select2 w-full">
                            <option selected="" disabled>Select Degree</option>
                        </select>
                    </div>
                </div>

                <div class="text-right mt-5">
                    <a asp-area="admin" asp-controller="Gallery" asp-action="index" class="button w-24 border text-gray-700 mr-1">Cancel</a>
                    <button type="submit" class="button w-24 bg-theme-1 text-white">Create</button>
                </div>
            </div>
        </form>
        <!-- END: Form Layout -->
    </div>
</div>


