@model Setting
@{
    ViewData["Title"] = "Index";
}

<h2 class="intro-y text-lg font-medium mt-10">
    Setting Data
</h2>
<div class="grid grid-cols-12 gap-6 mt-5">
    <div class="intro-y col-span-12 flex flex-wrap sm:flex-no-wrap items-center mt-2">
        <a class="button text-white bg-theme-1 shadow-md mr-2" asp-area="Admin" asp-controller="Setting" asp-action="Create">Create Setting</a>
        <div class="hidden md:block mx-auto text-gray-600">Showing 1 of 1 entries</div>
    </div>
    <!-- BEGIN: Data List -->
    <div class="intro-y col-span-12 overflow-auto" style="overflow-x:scroll;">
        <table class="table table-report -mt-2">
            <thead>
                <tr>
                    <th class="whitespace-no-wrap">#</th>
                    <th class="whitespace-no-wrap">Logo</th>
                    <th class="text-center whitespace-no-wrap">Phone</th>
                    <th class="text-center whitespace-no-wrap">Phone2</th>
                    <th class="text-center whitespace-no-wrap">About</th>
                    <th class="text-center whitespace-no-wrap">Work Period Detail</th>
                    <th class="text-center whitespace-no-wrap">Adress</th>
                    <th class="text-center whitespace-no-wrap">Adress2</th>
                    <th class="text-center whitespace-no-wrap">Email</th>
                    <th class="text-center whitespace-no-wrap">Email2</th>

                    <th class="text-center whitespace-no-wrap">Open Time</th>
                    <th class="text-center whitespace-no-wrap">Close Time</th>
                    <th class="text-center whitespace-no-wrap">Monday Saturday</th>
                    <th class="text-center whitespace-no-wrap">Friday</th>
                    <th class="text-center whitespace-no-wrap">Sunday</th>
                    <th class="text-center whitespace-no-wrap">Calender Events</th>
                </tr>
            </thead>
            <tbody>

                <tr class="intro-x">
                    <td class="w-40">
                        1
                    </td>
                    <td class="w-40">
                        <div class="flex">
                            <div class="w-10 h-10 image-fit zoom-in">
                                <img alt="@Model.Logo" class="tooltip rounded-full" src="~/images/@Model.Logo" title="@Model.Logo">
                            </div>
                        </div>
                    </td>

                    <td class="text-center">@Model.Phone</td>
                    <td class="text-center">@Model.Phone2</td>
                    <td>@(Model.About!=null && Model.About.Length>50?  Model.About.Substring(0,50): Model.About)</td>
                    <td class="text-center">@Model.WorkPeriodDetail</td>
                    <td class="text-center">@Model.Address</td>
                    <td class="text-center">@Model.Address2</td>
                    <td class="text-center">@Model.Email</td>
                    <td class="text-center">@Model.Email2</td>

                    <td class="text-center">@Model.OpenTime</td>
                    <td class="text-center">@Model.CloseTime</td>
                    <td class="text-center">@Model.MondaySaturday</td>
                    <td class="text-center">@Model.Friday</td>
                    <td class="text-center">@Model.Sunday</td>
                    <td class="text-center">@Model.CalendarEvents</td>
                    <td class="w-40">
                        <div class="flex items-center justify-center text-theme-9"> <i data-feather="check-square" class="w-4 h-4 mr-2"></i> Active </div>
                    </td>
                    <td class="table-report__action w-56">
                        <div class="flex justify-center items-center">
                            <a class="flex items-center mr-3" asp-area="admin" asp-controller="Setting" asp-action="update" asp-route-settingId="@Model.Id"> <i data-feather="check-square" class="w-4 h-4 mr-1"></i> Edit </a>
                            @*<a class="flex items-center text-theme-6" asp-area="admin" asp-controller="Blog" asp-action="delete" asp-route-testimonialId="@item.Id" onclick="return confirm('Are you sure?')"> <i data-feather="trash-2" class="w-4 h-4 mr-1"></i> Delete </a>*@
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <!-- END: Data List -->
</div>
<!-- BEGIN: Delete Confirmation Modal -->
<div class="modal" id="delete-confirmation-modal">
    <div class="modal__content">
        <div class="p-5 text-center">
            <i data-feather="x-circle" class="w-16 h-16 text-theme-6 mx-auto mt-3"></i>
            <div class="text-3xl mt-5">Are you sure?</div>
            <div class="text-gray-600 mt-2">Do you really want to delete these records? This process cannot be undone.</div>
        </div>
        <div class="px-5 pb-8 text-center">
            <a asp-area="Admin" asp-controller="Setting" asp-action="index" data-dismiss="modal" class="button w-24 border text-gray-700 mr-1">Cancel</a>
            <button type="button" class="button w-24 bg-theme-6 text-white">Delete</button>
        </div>
    </div>
</div>