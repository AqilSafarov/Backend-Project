<section id="our-team" class="padding_top half-section-alt teams-border">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-12">
                <div class="heading-title heading_space wow fadeInUp" data-wow-delay="300ms">
                    <span class="defaultcolor text-center text-md-left">@Model.Expert.Subtitle</span>
                    <h2 class="darkcolor font-normal text-center text-md-left">@Model.Expert.Title</h2>
                </div>
