@model Counters
@{
    Layout = null;
}
<section id="bg-counters" class="padding bg-counters parallax">
    <div class="container">
        <div class="row align-items-center text-center">
            <div class="col-lg-4 col-md-4 col-sm-4 bottom10">
                <div class="counters whitecolor  top10 bottom10">
                    <span class="count_nums font-light" data-to="@Model.StartYear">@Model.StartYear</span>
                </div>
                <h3 class="font-light whitecolor top20">@Model.Subtitle</h3>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-4">
                @*<p class="whitecolor top20 bottom20 font-light title">@(Model.Desc.Length>30 && Model.Desc != null? Model.Desc.Substring(0,300): Model.Desc) </p>*@
                <p class="whitecolor top20 bottom20 font-light title">@Model.Desc </p>

            </div>
            <div class="col-lg-4 col-md-4 col-sm-4 bottom10">
                <div class="counters whitecolor top10 bottom10">
                    <span class="count_nums font-light" data-to="@Model.StudentCount">@Model.StudentCount </span>
                </div>
                <h3 class="font-light whitecolor top20">@Model.Subtitle2</h3>
            </div>
        </div>
    </div>
</section>
