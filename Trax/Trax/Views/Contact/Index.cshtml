@model VmFooter
@{
    ViewData["Title"] = "Index";
}

<!--Page Header-->
@await Component.InvokeAsync("VcBanner", new { pageid = 1 })
<!--Page Header ends -->
<!-- Contact US -->
<section id="stayconnect1" class="bglight position-relative padding noshadow">
    <div class="container whitebox">
        <div class="widget py-5">
            <div class="row">
                <div class="col-md-12 text-center wow fadeIn mt-n3" data-wow-delay="300ms">
                    <h2 class="heading bottom30 darkcolor font-light2 pt-1">
                        <span class="font-normal">@Model.PageDetail.Title </span>
                        <span class="divider-center"></span>
                    </h2>
                    <div class="col-md-8 offset-md-2 bottom35">
                        <p>@Model.PageDetail.Desc</p>
                    </div>
                </div>
                <div class="col-md-6 col-sm-6 order-sm-2">
                    <div class="contact-meta px-2 text-center text-md-left">
                        <div class="heading-title">
                            <span class="defaultcolor mb-3">@Model.Contact.Subtitle</span>
                            <h2 class="darkcolor font-normal mb-4"><span class="d-none d-md-inline-block">@Model.Contact.Title </span></h2>
                        </div>
                        <p class="bottom10">Address: @Model.Setting.Address</p>
                        <p class="bottom10">@Model.Setting.Phone</p>
                        <p class="bottom10"><a href="mailto:polpo@traxagency.co.au">@Model.Setting.Email</a></p>
                        <p class="bottom10">Mon-Fri: 9am-5pm</p>
                        <ul @*class="social-icons mt-4 mb-4 mb-sm-0 wow fadeInUp" data-wow-delay="300ms">
                            @foreach (var item in Model.SocialToTeamMember)
                            {
                        <li>
                            <a href="@item.Link" title="@Model.Social.Name">
                                <i class="@Model.Social.Icon"></i>
                            </a>
                        </li>}*@

                        </ul>
                    </div>
                </div>
                <div class="col-md-6 col-sm-6">
                    <div class="heading-title  wow fadeInUp" data-wow-delay="300ms">
                        <form method="get" class="getin_form wow fadeInUp"  asp-controller="Contact" asp-action="Message"  >
                            <div asp-validation-summary="All"></div>
                            <div class="row px-2">
                                <div class="col-md-12 col-sm-12" id="result1"></div>
                                <div class="col-md-12 col-sm-12">
                                    <div class="form-group">
                                        <label for="name1" class="d-none"></label>
                                        <input asp-for="Message.Name" class="form-control"  placeholder="Name:"  >
                                    </div>
                                </div>
                                <div class="col-md-12 col-sm-12">
                                    <div class="form-group">
                                        <label for="email1" class="d-none"></label>
                                        <input asp-for="Message.Email" class="form-control"   placeholder="Email:" >
                                    </div>
                                </div>
                                <div class="col-md-12 col-sm-12">
                                    <div class="form-group">
                                        <label for="message1" class="d-none"></label>
                                        <textarea class="form-control" asp-for="Message.Text"   placeholder="Message:" required ></textarea>
                                    </div>
                                </div>
                                <div class="col-md-12 col-sm-12">
                                    <button type="submit" id="submit_btn1" class="button gradient-btn w-100">Send</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-3 col-md-3">
                <div class="widget text-center top60 w-100">
                    <div class="contact-box">
                        <span class="icon-contact defaultcolor"><i class="fas fa-mobile-alt"></i></span>
                        <p class="bottom0"><a href="tel:+14046000396">@Model.Setting.Phone</a></p>
                        <p class="d-block"><a href="tel:+43720778972">@Model.Setting.Phone2</a></p>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-3">
                <div class="widget text-center top60 w-100">
                    <div class="contact-box">
                        <span class="icon-contact defaultcolor"><i class="fas fa-map-marker-alt"></i></span>
                        <p class="bottom0">@Model.Setting.Address </p>
                        <p class="d-block">@Model.Setting.Address2 </p>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-3">
                <div class="widget text-center top60 w-100">
                    <div class="contact-box">
                        <span class="icon-contact defaultcolor"><i class="far fa-envelope"></i></span>
                        <p class="bottom0"><a href="mailto:admin@website.com">@Model.Setting.Email</a></p>
                        <p class="d-block"><a href="mailto:email@website.com">@Model.Setting.Email2</a></p>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-3">
                <div class="widget text-center top60 w-100">
                    <div class="contact-box">
                        <span class="icon-contact defaultcolor"><i class="far fa-clock"></i></span>
                        <p class="bottom15">UTC−@Model.Setting.OpenTime<span class="d-block">UTC+@Model.Setting.CloseTime</span></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Contact US ends -->
<!-- map -->
